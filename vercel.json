{
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/dashboard.html" },
    { "src": "/index.html", "dest": "/public/index.html" },
    { "src": "/stats.html", "dest": "/public/stats.html" },
    { "src": "/login.html", "dest": "/public/login.html" },
    { "src": "/register.html", "dest": "/public/register.html" },
    { "src": "/api/events", "dest": "/api/events.js" },
    { "src": "/api/logs", "dest": "/api/logs.js" },
    { "src": "/api/stats", "dest": "/api/stats.js" }
  ]
}